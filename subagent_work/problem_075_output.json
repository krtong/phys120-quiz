  "correctFormulas": [
    {
      "name": "RMS speed from kinetic theory",
      "formula": "v₍rms₎ = √(3k₍B₎ T / m)"
    },
    {
      "name": "Ideal gas law",
      "formula": "PV = Nk₍B₎T"
