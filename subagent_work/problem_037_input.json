  "correctFormulas": [
    {
      "name": "Convert rpm to rad/s",
      "formula": "ω = f₍rpm₎ × (2π / 60)"
    },
    {
      "name": "Constant angular acceleration",
      "formula": "α = (ω₍f₎ − ωᵢ) / Δt"
    },
    {
      "name": "Angular speed after time t",
      "formula": "ω(t) = ωᵢ + α t"
    },
    {
      "name": "Radial and tangential accelerations",
      "formula": "a₍r₎ = ω² r,   a₍t₎ = α r"
    }
  ],
  "steps": [
    {
      "explanation": "Convert 120 rpm and 280 rpm to rad/s: ωᵢ = 12.6 rad/s, ω₍f₎ = 29.3 rad/s.",
      "notations": "ωᵢ = 12.6, ω₍f₎ = 29.3 rad/s"
    },
    {
      "explanation": "Compute α from the change over 4.0 s.",
      "notations": "α = (29.3 − 12.6)/4.0 ≈ 4.19 rad/s²"
    },
    {
      "explanation": "Find the angular speed after 2.0 s to evaluate instantaneous accelerations.",
      "notations": "ω(t₁) = 12.6 + (4.19)(2.0) ≈ 21.0 rad/s"
    },
    {
      "explanation": "Compute radial and tangential components.",
      "notations": "a₍r₎ = (21.0)²(0.305) ≈ 1.3 × 10² m/s²;  a₍t₎ = (4.19)(0.305) ≈ 1.3 m/s²"
    }
  ]
